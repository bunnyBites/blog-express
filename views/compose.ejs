<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="mb-2">
    <label for="postTitleInput" class="form-label">Title</label>
    <input id="postTitleInput" type="text" class="form-control" name="title" autocomplete="off">
  </div>

  <div class="mb-2">
    <lable for="postDescriptionInput" class="form-label">Post</lable>
    <textarea id="postDescriptionInput" class="form-control" name="description" autocomplete="off"></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="publishBtn">Publish</button>
</form>

